<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>CommuniCare Request Form</title>

    <!-- Icons font CSS-->
    <link href="/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="/css/poppins.css" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="/css/main.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper  p-t-130 p-b-100 font-poppins" style="background-color:rgb(2,199,218)">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <div class="row row-space">
                        <div class="col-1">
                            <img src="/img/CommuniCare.png" class="rounded float-left" style="height:150px;width:150px;margin:-30px 20px" alt="CommuniCare">
                        </div>
                        <div class="col-3">
                            <h2 class="title" style="margin:30px 0px">CommuniCare Request Form</h2>
                        </div>
                    </div>
                    </br> </br>
                    <form method="POST" name="request">
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">first name</label>
                                    <input class="input--style-4" type="text" name="fName" required>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">last name</label>
                                    <input class="input--style-4" type="text" name="lName" required>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Birthday</label>
                                    <div class="input-group-icon">
                                        <input class="input--style-4 js-datepicker" type="text" name="dob">
                                        <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Phone Number</label>
                                    <input class="input--style-4" type="text" name="phone" required>
                                </div>
                            </div>
                        </div>
                        <div class="input-group">
                            <label class="label">Address</label>
                            <div class="rs-select2 js-select-simple select--no-search">
                                <input class="input--style-4" type="text" id="search_term" name="address" required>
                                
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Request Type</label>
                                    <div class="rs-select2 js-select-simple select--no-search">
                                        <select name="requestType" required>
                                            <option disabled="disabled" selected="selected">Choose option</option>
                                            <option>Medicine</option>
                                            <option>Groceries</option>
                                            <option>Emotional Support</option>
                                            <option>Other</option>
                                        </select>
                                        <div class="select-dropdown"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Request Date</label>
                                    <div class="input-group-icon">
                                        <input class="input--style-4 js-datepicker" type="text" name="dateTime">
                                        <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="input-group">
                            <label class="label">Request Details</label>
                            <div class="form-group">
                                <textarea class="form-control input--style-4 col-4" name="request"></textarea>
                            </div>
                        </div>
                        <div class="p-t-15">
                            <button class="btn btn--radius-2" style="background-color:rgb(2,199,218)" type="submit">Submit</button>
                        </div>
                    </form>
                </br></br>
                    <div class="container" style="display:table; width:100%">
                        <% for(var i = 0; i < stores.length; i++) {%>

                            <a style="display:table-cell; text-align:center;" href="<%=stores[i].site%>"><%=stores[i].name%>

                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
    function activatePlacesSearch(){
        var input = document.getElementById('search_term');
        var autocomplete = new google.maps.places.Autocomplete(input);
    }
    </script>

    <!-- Jquery JS-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="/vendor/select2/select2.min.js"></script>
    <script src="/vendor/datepicker/moment.min.js"></script>
    <script src="/vendor/datepicker/daterangepicker.js"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=&libraries=places&callback=activatePlacesSearch"></script>
    <!-- Main JS-->
    <script src="/js/global.js"></script>

</body>

</html>
<!-- end document-->